<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowNutritionLayout">

    <TextView
        android:id="@+id/row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.2001"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="12:00"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/row_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="10"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/row_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="10"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/row_protein"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_carb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="10"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/row_fat"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>